{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "dev"
        }
      }
    },
    {
      "label": "üß∂ lint",
      "command": "pnpm",
      "args": ["lint"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "‚ú® Format",
      "command": "pnpm",
      "args": ["format"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "‚úÖ Typecheck",
      "command": "pnpm",
      "args": ["typecheck"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "üóÉÔ∏è prisma:generate",
      "command": "pnpm",
