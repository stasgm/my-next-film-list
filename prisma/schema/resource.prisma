model Resource {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  schema    Int      @default(1)

  title     String
  tmdbId    Int?
  url       String
  genres    String[]
  seasons   Season[]
  type      ResourceType
  details   Json?
  rating    Int?
  seen      Boolean      @default(false)
  favourite Boolean      @default(false)

  @@unique([title, url])
}
