enum ResourceType {
  FILM
  SERIES
}

type Episode {
  title           String
  number          Int
  releaseDate     DateTime?
  durationMinutes Int?
  rating          Int
}

model Season {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  number        Int
  episodesTotal Int
  episodes      Episode[]
  Resource      Resource? @relation(fields: [resourceId], references: [id])
  resourceId    String?   @db.ObjectId
}

